{
  "private": true,
  "name": "notion-archivist",
  "description": "Archive content from a webpage into Notion",
  "version": "1.0.0",
  "author": "Phoenix Zerin",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "npm run compile && vite build",
    "compile": "tsc --noEmit && prettier --write . && tslint -c tslint.json src/**/*.ts",
    "dev": "vite",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/turndown": "^5.0.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "tslint": "^5.20.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vite-plugin-web-extension": "^4.0.0"
  },
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "turndown": "^7.2.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.ts": "tslint -c tslint.json"
  }
}
